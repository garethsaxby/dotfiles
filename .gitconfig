[core]
  excludesfile = ~/.gitignore_global
  editor = nvim

# Git Command Behaviours
[push]
  default = current
  followTags = true
[pull]
  rebase = false
[init]
  defaultBranch = main

# Specific Includes not to be stored in Git
[include]
  path = .git_includes/gitconfig
